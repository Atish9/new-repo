<VirtualHost *:<%= @params[:server_port] %>>
   ServerAdmin atish@tecadmin.net
    DocumentRoot <%= @params[:docroot] %>
    ServerName <%= @params[:server_name] %>
    <Directory <%= @params[:docroot] %>>
         Allowoverride All
     </Directory>
    ErrorLog logs/atish.tecadmin.net-error_log
    CustomLog logs/atish.tecadmin.net-access_log combined
</VirtualHost>


